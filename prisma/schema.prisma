generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

// 1. The User Model
model User {
  id        String    @id @default(cuid()) // Unique ID (like 'clj...')
  name      String?
  email     String    @unique
  password  String    
  image     String?   // URL to profile picture(coming soon)
  role      Role      @default(MEMBER) // Defaults to regular member
  
  posts     Post[]    // A user can write many posts
  comments  Comment[] // A user can write many comments
  likes     Like[]    // A user can like many posts
  
  createdAt DateTime  @default(now())
}

// 2. The Blog Post
model Post {
  id        String   @id @default(cuid())
  title     String
  subtitle  String?  
  slug      String   @unique
  content   String   // We will store HTML string here
  imageUrl  String?
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  
  likes     Like[]
  comments  Comment[]
}

// 3. Comments (Only for registered members)
model Comment {
  id        String   @id @default(cuid())
  content   String
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  postId    String
  post      Post     @relation(fields: [postId], references: [id])
  
  createdAt DateTime @default(now())
}

// 4. Likes
model Like {
  id        String   @id @default(cuid())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  postId    String
  post      Post     @relation(fields: [postId], references: [id])

  // Prevents a user from liking the same post twice
  @@unique([userId, postId]) 
}

// Enums allow us to restrict values to a specific list
enum Role {
  ADMIN
  MEMBER
}